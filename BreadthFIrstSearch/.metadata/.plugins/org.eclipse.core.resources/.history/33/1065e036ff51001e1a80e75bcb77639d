/**
 * 
 */

/**
 * @author tom
 *
 */
public class State {
	
	boolean dirtLeft;
	boolean dirtRight;
	char position;
	
	public State(boolean dirtLeft, boolean dirtRight, char position) {
		this.dirtLeft = dirtLeft;
		this.dirtRight = dirtRight;
		this.position = position;
		
	}
	
	// Implement the actions and transition model
	
	public State suck() {
		if (this.position == 'R') {
			return new State(this.dirtLeft, false, 'R');
		} else {
			return new State(false, this.dirtRight, 'L');
		}
	}
	
	public void goLeft() {
		this.position = 'L';
	}
	
	public void goRight() {
		this.position = 'R';
	}
	
	public void setDirtLeft() {
		this.dirtLeft = true;
	}
	
	public void setDirtRight() {
		this.dirtRight = true;
	}
	
		
		
	
	
}
